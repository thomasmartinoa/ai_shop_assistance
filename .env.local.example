# Shopkeeper AI Assistant - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Shopkeeper AI

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_GST=true
NEXT_PUBLIC_ENABLE_REPORTS=true

# ===========================================
# VOICE SETTINGS
# ===========================================
# Default language for speech recognition
NEXT_PUBLIC_VOICE_LANG=ml-IN
# Fallback language
NEXT_PUBLIC_VOICE_FALLBACK_LANG=en-IN

# ===========================================
# DIALOGFLOW CONFIGURATION (OPTIONAL)
# ===========================================
# See docs/DIALOGFLOW_SETUP.md for setup instructions
# Without these, the app uses local pattern matching fallback

# Google Cloud Project ID
DIALOGFLOW_PROJECT_ID=your-project-id
NEXT_PUBLIC_DIALOGFLOW_PROJECT_ID=your-project-id

# Service Account Email (from JSON key file)
DIALOGFLOW_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private Key (from JSON key file - keep \n for newlines)
DIALOGFLOW_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Key-Here\n-----END PRIVATE KEY-----\n"
